# General
ENVIRONMENT=development
LOG_LEVEL=debug
HTTP_PORT=8080

# Slack (optional — runs in API-only mode without these)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_ALLOWED_CHANNELS=C0123ABCD,C0456EFGH

# GitHub App (optional)
GITHUB_APP_ID=123456
GITHUB_INSTALLATION_ID=789012
GITHUB_PRIVATE_KEY_PATH=./keys/github-app.pem
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Jira (optional — Phase 2)
# JIRA_BASE_URL=https://your-org.atlassian.net
# JIRA_CLIENT_ID=your-oauth-client-id
# JIRA_CLIENT_SECRET=your-oauth-client-secret
# JIRA_API_EMAIL=user@example.com
# JIRA_API_TOKEN=your-api-token
# JIRA_CLOUD_ID=your-cloud-id

# Bridge (Slack → Kog-2 via OpenClaw CLI)
OPENCLAW_BIN=openclaw
# OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789
# OPENCLAW_GATEWAY_TOKEN=your-gateway-token

# Supervisor
SUPERVISOR_CHANNEL=C0123ABCD
TOKEN_TTL=10m
APPROVAL_TIMEOUT=30m

# Management API
MGMT_LISTEN_ADDR=:8090
MGMT_AUTH_MODE=api-key
MGMT_API_KEY=your-api-key-here
MGMT_RATE_LIMIT_RPS=100
MGMT_RATE_LIMIT_BURST=200
# MGMT_TLS_CERT=./certs/tls.crt
# MGMT_TLS_KEY=./certs/tls.key
# MGMT_CORS_ORIGINS=http://localhost:3000
MGMT_WORKERS=4
CALLBACK_TIMEOUT=30s
CALLBACK_RETRIES=3
